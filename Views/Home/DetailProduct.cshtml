            </div>
        </div>
    </div>

    <div class="col-7">
        <div class="container mt-2" style="margin-left: 4em">
            <div class="div_name">
                <p class="h2">{{name}}</p>
                <div>Mã SP:<span>{{code}}</span></div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="container-fluid price_detail">
                        <table>
                            <tbody>
                                <tr>
                                    <th>Giá khuyến mại:</th>
                                    <td><span>{{price}} VNĐ </span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-6">
                    <button class="btn btn_add_order">Mua Ngay</button>
                </div>
                <div class="col-6">
                    <button class="btn btn_add_card">Thêm vào giỏ hàng</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var DetailVueApp = new Vue({
        el: "#DetailVue",
        data: {
            id: @Html.Raw(Model.Id),
            code: "@Html.Raw(Model.ProductCode)",
            name: "@Html.Raw(Model.Name)",
            price: @Html.Raw(Model.Price),
            brandName: "@Html.Raw(Model.BrandName)",
            cateName: "@Html.Raw(Model.CategoryName)",
            slug: "@Html.Raw(Model.Slug)",
            Img1: "@Html.Raw(Model.Img1)",
            Img2: "@Html.Raw(Model.Img2)",
