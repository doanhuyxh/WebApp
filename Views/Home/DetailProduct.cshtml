@model WebApp.Models.ViewModel.ProductViewModel;

<div id="DetailVue" class="container-lg row m-2" style="background-color: #fff">
    <div class="col-5">
        <div class="container-fluid mt-2">
            <div class="border overflow-hidden text-center boder-radius-2em" style="width:38em; height:auto;">
                <img :src="BigSizeImg" style="width:100%; height:100%;" />
            </div>

            <div class="d-flex justify-content-evenly mt-3">
                <div class="boder-radius-2em" style="width:7em; height:auto;"><img :src="Img1" style="width:100%; height:100%;" /> </div>
                <div class="boder-radius-2em" style="width:7em; height:auto;"><img :src="Img2" style="width:100%; height:100%;" /> </div>
