<div id="AppProduct" class="row mt-6">
    <div class="col-12">
        <div class="col-xl-2 col-lg-12"><button type="button" v-on:click="AddProduct()" class="btn btn-success">Thêm loại sản phẩm</button></div>
    </div>
    <div class="container">
