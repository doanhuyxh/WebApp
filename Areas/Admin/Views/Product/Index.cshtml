                })
            },
            ChangeHotSale(id) {
                fetch("/Admin/Product/ChangeHotSale?id=" + id)
                    .then(res => { window.location.reload() })
            },
            ChangeHotTrend(id) {
                fetch("/Admin/Product/ChangeHotTrend?id=" + id)
                    .then(res => { window.location.reload() })
            },
            StopProduct(id) {
                fetch("/Admin/Product/StopProduct?id=" + id)
                    .then(res => { window.location.reload() })
